<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <Spinner
                android:id="@+id/stateList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/cityList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/schoolTypeList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/schoolNameList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="center"
                    android:id="@+id/school_grade"
                    android:inputType="numberSigned"
                    android:imeOptions="actionNext"
                    android:layout_weight="25"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:hint="@string/school_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <EditText
                    android:gravity="center"
                    android:id="@+id/school_class"
                    android:inputType="numberSigned"
                    android:imeOptions="actionNext"
                    android:layout_weight="25"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:hint="@string/school_class"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <EditText
                    android:gravity="center"
                    android:id="@+id/school_number"
                    android:inputType="number"
                    android:maxEms="2"
                    android:maxLength="2"
                    android:imeOptions="actionDone"
                    android:layout_weight="30"
                    android:hint="@string/school_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/schoolSetButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_button"
                android:textStyle="bold"
                android:text="입력"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>